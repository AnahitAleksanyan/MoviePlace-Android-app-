<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        android:background="@drawable/back_image"
        android:contentDescription="@string/login_background_image" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/add_movie_name"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Name"
                            android:inputType="textPersonName"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <EditText
                            android:id="@+id/add_movie_created_date"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Created date"
                            android:inputType="date"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <EditText
                            android:id="@+id/add_movie_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Start date"
                            android:inputType="date"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <EditText
                            android:id="@+id/add_movie_length"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Length"
                            android:inputType="number"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <EditText
                            android:id="@+id/add_movie_producer"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Producer name"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/add_movie_budget"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Budget"
                            android:inputType="numberDecimal"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <Spinner
                            android:id="@+id/add_movie_Category"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Category"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <Spinner
                            android:id="@+id/add_movie_Country"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Country"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <Spinner
                            android:id="@+id/add_movie_Company"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Company"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />

                        <Spinner
                            android:id="@+id/add_movie_Rating"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="15dp"
                            android:alpha="0.8"
                            android:autofillHints=""
                            android:background="@drawable/edit_text_style"
                            android:ems="10"
                            android:hint="Rating"
                            android:inputType="text"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlSymmetry" />


                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/add_movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginBottom="15dp"
                    android:alpha="0.8"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_style"
                    android:ems="10"
                    android:hint="Description"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    tools:ignore="RtlSymmetry" />

                <EditText
                    android:id="@+id/add_movie_imageURL"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.8"
                    android:autofillHints=""
                    android:background="@drawable/edit_text_style"
                    android:ems="10"
                    android:hint="Image URL"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    tools:ignore="RtlSymmetry" />

                <Button
                    android:id="@+id/add_movie_add_actor_btn"
                    android:layout_width="193dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.7"
                    android:backgroundTint="#3353B1"
                    android:text="@string/add_actor"
                    android:textColor="#FFF"
                    app:cornerRadius="15dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="273dp"
                    tools:layout_editor_absoluteY="424dp" />

                <LinearLayout
                    android:id="@+id/add_movie_add_actor_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/add_movie_add_actor_spinner"
                        android:layout_width="165dp"
                        android:layout_height="35dp"
                        android:alpha="0.8"
                        android:autofillHints=""
                        android:background="@drawable/edit_text_style"
                        android:ems="10"
                        android:hint="Category"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        tools:ignore="RtlSymmetry" />

                    <Button
                        android:id="@+id/add_movie_add_btn"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:alpha="0.7"
                        android:backgroundTint="#3353B1"
                        android:text="@string/add"
                        android:textColor="#FFF" />
                </LinearLayout>

                <ListView
                    android:id="@+id/add_movie_actors_list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="630dp"
                android:gravity="center">

            </LinearLayout>

            <Button
                android:id="@+id/save_movie_btn"
                android:layout_width="314dp"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="11dp"
                android:alpha="0.7"
                android:text="Save Movie"
                app:cornerRadius="15dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="273dp"
                tools:layout_editor_absoluteY="480dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>